---
import { Image } from "astro:assets";

type AssetModule = {
  src: string;
  width: number;
  height: number;
  format?: string;
};

type GridItem = {
  key: string;
  name: string;
  alt?: string;
  url?: string;
  src: AssetModule;
};

type Props = {
  title?: string;
  ariaLabel?: string;
  items: GridItem[];
  /** Optional: fixed tile height */
  itemHeight?: number;
  /** Optional: max logo width */
  maxLogoWidth?: number;
};

const {
  title,
  ariaLabel = title ?? "Sponsors",
  items,
  itemHeight = 110,
  maxLogoWidth = 240,
} = Astro.props as Props;
---

{title ? <h2>{title}</h2> : null}

<div class="sponsor-grid" aria-label={ariaLabel}>
  {items.map((s) => (
    <div class="sponsor-item" key={s.key} style={`height:${itemHeight}px`}>
      {s.url ? (
        <a
          class="sponsor-link"
          href={s.url}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`Open ${s.name} website`}
          title={s.name}
        >
          <Image src={s.src} alt={s.alt ?? `${s.name} logo`} class="sponsor-logo" style={`max-width:${maxLogoWidth}px`} />
        </a>
      ) : (
        <Image src={s.src} alt={s.alt ?? `${s.name} logo`} class="sponsor-logo" style={`max-width:${maxLogoWidth}px`} />
      )}
    </div>
  ))}
</div>

<style>
  .sponsor-grid {
    display: grid;
    gap: 1.5rem;
    margin-top: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    align-items: center;
  }

  .sponsor-item {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 0.75rem;
  }

  .sponsor-logo {
    max-height: 100%;
    width: 100%;
    object-fit: contain;
  }

  .sponsor-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    border-radius: 12px;
    text-decoration: none;
    outline: none;
  }

  .sponsor-link:focus-visible {
    box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.45);
  }

  .sponsor-link:hover .sponsor-logo {
    filter: brightness(0.95);
  }

  @media (min-width: 768px) {
    .sponsor-item {
      height: 130px;
    }
  }
</style>