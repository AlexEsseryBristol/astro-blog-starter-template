---
// src/components/archive/Affiliations.astro
import { Image } from "astro:assets";
import QECDT from "../../assets/company_logos/QECDTlogo.webp";
import UoB from "../../assets/company_logos/UoB.svg";
---

<section class="affiliations">
  <div class="inner">
    <h2>Affiliations</h2>

    <div class="grid" aria-label="Affiliations">
      <div class="item">
        <a href="https://www.bristol.ac.uk/quantum-engineering/" class="link">
          <Image
            src={QECDT}
            alt="Centre for Doctoral Training in Quantum Engineering logo"
            class="logo"
            loading="lazy"
            decoding="async"
          />
        </a>
      </div>

      <div class="item">
        <a href="https://www.bristol.ac.uk" class="link">
          <Image src={UoB} alt="University of Bristol logo" class="logo" loading="lazy" decoding="async" />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .affiliations {
    background: #000;
    padding: 2rem 1.5rem 4rem;
  }
  .inner {
    max-width: 900px;
    margin: 0 auto;
  }
  h2 {
    margin: 0 0 1.5rem 0;
    color: rgb(var(--white));
  }
  .grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    align-items: center;
  }
  .item {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 110px;
    padding: 0.5rem 0.75rem;
  }
  .link {
    display: inline-flex;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    text-decoration: none;
    outline: none;
  }
  .link:focus-visible {
    box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.45);
  }
  .logo {
    max-height: 100%;
    width: 100%;
    max-width: 240px;
    object-fit: contain;
  }
  @media (hover: none) {
    .logo {
      min-width: calc(240px * 0.8);
    }
  }
</style>
