---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'> & {
  mobile?: boolean;
};

const { href, class: className, mobile = false, ...props } = Astro.props;

// 1. Get current path
const { pathname } = Astro.url;

// 2. Normalize both paths (remove trailing slashes)
const normalize = (p: string) => p.replace(/\/$/, "");
const currentPath = normalize(pathname);
const linkPath = normalize(href as string);

// 3. Check for exact match OR if it's a sub-page (e.g., /archive/2024)
// This ensures that when you're on a sub-page, the parent link also stays active.
const isActive = currentPath === linkPath || 
                (linkPath !== "" && linkPath !== "/" && currentPath.startsWith(linkPath));
---
<a
  href={href}
  class:list={[
    mobile ? 'btn--mobile' : 'header-link',
    className, // This allows passed classes to work
    { active: isActive } // This is the class the parent CSS looks for
  ]}
  aria-current={isActive ? 'page' : undefined}
  {...props}
>
  <slot />
</a>

<style>
  a {
    text-decoration: none;
    color: inherit;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
    font: inherit;
    font-size: 1.35rem; /* Standardized size */
  }

  /* Desktop Link Styling */
  .header-link {
    display: inline-flex;
    align-items: center;
    line-height: 1;
    padding: 0.0rem 0.0rem; /* Matches .archive-link padding */
  }

  /* ONLY apply hover on devices that support it (Desktop) */
  @media (hover: hover) {
    .header-link:hover {
      color: #00bcae;
    }
    .btn--mobile:hover {
       background: rgba(255, 255, 255, 0.08);
    }
  }

  .header-link.active {
    text-shadow: 1px 0 currentColor;
  }

  /* Mobile Button Styling */
  .btn--mobile {
    display: block;
    width: 100%;
    box-sizing: border-box;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    text-align: center;
    border: 1px solid transparent;
    -webkit-tap-highlight-color: transparent;
  }

/* ACTIVE STATE (Mobile) */
  .btn--mobile.active {
    background: rgba(255, 255, 255, 0.12) !important;
    border: 1px solid rgba(255, 255, 255, 0.22) !important;
    color: #00bcae !important; /* Ensure this matches your brand teal */
    text-shadow: 0.5px 0 currentColor;
  }
</style>
