---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { Image } from 'astro:assets';
import Logo from '../assets/logo/QECDTlogo.webp';
import bg from '../assets/background/richmond_building.webp';
import LTP from '../assets/sponsor_logos/LTP.webp';
import sparrow from '../assets/sponsor_logos/sparrow.webp';
import quantinuum from '../assets/sponsor_logos/quantinuum.webp';
import phasecraft from '../assets/sponsor_logos/phasecraft.webp';
import QETLabs from '../assets/sponsor_logos/QETLabs.png';
import QECDT from '../assets/sponsor_logos/QECDTlogo.webp';
import UKRI from '../assets/sponsor_logos/UKRI.webp';
import IOP from '../assets/sponsor_logos/IOP.webp';
import UoB from '../assets/sponsor_logos/UoB.svg';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <section class="content-section">
      <div class="content-inner">
        <h2>Contact Us</h2>
        <p>
            The contact form is still under development. You can make an inquiry directly at <a href="mailto:ciq-2025@bristol.ac.uk">ciq-2025@bristol.ac.uk</a>.
        </p>
      </div>
    </section>

	<section class="content-section4">
		<div class="content-inner">
			<h2>Affiliations</h2>

			<div class="sponsor-grid" aria-label="Affiliations">
				<div class="sponsor-item">
					<Image src={QECDT} alt="Centre for Doctoral Training in Quantum Engineering logo" class="sponsor-logo" />
				</div>

				<div class="sponsor-item">
					<Image src={UoB} alt="University of Bristol logo" class="sponsor-logo" />
				</div>
			</div>
		</div>
	</section>

    <Footer />

    <style>
      .index-bg {
        min-height: 60vh;
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
      }

      .hero-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
      }

      .content-section {
        background-color: hsl(192, 100%, 15%); /* change as desired */
        padding: 4rem 1.5rem;
      }

	  .content-section2 {
        background-color: #87a5ad; /* change as desired */
        padding: 4rem 1.5rem;
      }

	  .content-section3 {
        background-color: #00bcae; /* change as desired */
        padding: 4rem 1.5rem;
      }

	  .content-section4 {
		background-color: #000000ff; /* change as desired */
		padding: 4rem 1.5rem;
	  }

      .content-inner {
        max-width: 900px;
        margin: 0 auto;
      }
	  /* Sponsor logo grid */
	.sponsor-grid {
	display: grid;
	gap: 1.5rem;
	margin-top: 2rem;

	/* Responsive columns: grows/shrinks automatically */
	grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
	align-items: center;
	}

	.sponsor-item {
	/* Center each logo in its cell */
	display: flex;
	align-items: center;
	justify-content: center;

	/* Give consistent vertical space per logo */
	height: 110px;            /* adjust to taste */
	padding: 0.5rem 0.75rem;
	}

	.sponsor-logo {
	/* Constrain vertical size, preserve aspect ratio */
	max-height: 100%;
	width: 100%;
	object-fit: contain;

	/* Optional: prevent huge logos from stretching too wide */
	max-width: 240px;
	}

	/* Slightly taller rows on larger screens (optional) */
	@media (min-width: 768px) {
	.sponsor-item {
		height: 130px;
	}
	}

    </style>
  </body>
</html>
