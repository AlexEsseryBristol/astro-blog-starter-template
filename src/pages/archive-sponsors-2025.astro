---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";

import SponsorGrid from "../components/SponsorGrid.astro";

// Affiliations
import QECDT from "../assets/company_logos/QECDTlogo.webp";
import UoB from "../assets/company_logos/UoB.svg";

// Meta JSON
import partnersMeta from "../content/attending/2025partners.json";
import sponsorsMeta from "../content/attending/2025sponsors.json";
import attendingMeta from "../content/attending/2025attending.json";

// Folder-driven logos
const sponsorsModules = import.meta.glob(
  "../assets/2025/sponsors/*.{avif,webp,png,jpg,jpeg,svg}",
  { eager: true, import: "default" }
);

const attendingModules = import.meta.glob(
  "../assets/2025/attending/*.{avif,webp,png,jpg,jpeg,svg}",
  { eager: true, import: "default" }
);

const partnersModules = import.meta.glob(
  "../assets/2025/partners/*.{avif,webp,png,jpg,jpeg,svg}",
  { eager: true, import: "default" }
);

type AssetModule = { src: string; width: number; height: number; format?: string };

function basenameNoExt(p: string) {
  const file = p.split("/").pop() ?? "";
  return file.replace(/\.[^.]+$/, "");
}

function humanizeFromFilename(stem: string) {
  const noPrefix = stem.replace(/^\d+[-_ ]*/, "");
  return noPrefix.replace(/[-_]+/g, " ").trim();
}

function normalizeHref(href?: string) {
  if (!href) return undefined;
  const v = href.trim();
  if (!v) return undefined;
  return v.replace(/^https?:\/\/www\.careers-in-quantum\.com/i, "");
}

// Attending
type AttendingMeta = { name: string; url?: string };
type AttendingMetaMap = Record<string, AttendingMeta>;
const attendingMetaMap = attendingMeta as AttendingMetaMap;

const attendingItems = Object.entries(attendingModules)
  .sort(([a], [b]) => a.localeCompare(b))
  .map(([path, mod]) => {
    const slug = basenameNoExt(path);
    const m = attendingMetaMap[slug] ?? { name: humanizeFromFilename(slug) };

    return {
      key: slug,
      src: mod as unknown as AssetModule,
      name: m.name,
      url: m.url,
    };
  });

// Sponsors
type SponsorsMeta = { name: string; url?: string };
type SponsorsMetaMap = Record<string, SponsorsMeta>;
const sponsorsMetaMap = sponsorsMeta as SponsorsMetaMap;

const sponsorsItems = Object.entries(sponsorsModules)
  .sort(([a], [b]) => a.localeCompare(b))
  .map(([path, mod]) => {
    const slug = basenameNoExt(path);
    const m = sponsorsMetaMap[slug] ?? { name: humanizeFromFilename(slug) };

    return {
      key: slug,
      src: mod as unknown as AssetModule,
      name: m.name,
      url: m.url,
    };
  });

// Partners
type PartnersMeta = { name: string; url?: string };
type PartnersMetaMap = Record<string, PartnersMeta>;
const partnersMetaMap = partnersMeta as PartnersMetaMap;

const partnersItems = Object.entries(partnersModules)
  .sort(([a], [b]) => a.localeCompare(b))
  .map(([path, mod]) => {
    const slug = basenameNoExt(path);
    const m = partnersMetaMap[slug] ?? { name: humanizeFromFilename(slug) };

    return {
      key: slug,
      src: mod as unknown as AssetModule,
      name: m.name,
      url: m.url,
    };
  });
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="CiQ 2025 Sponsors & Attending Companies"
      description="Archive of CiQ 2025 sponsors and attending companies."
    />
  </head>

  <body>
    <Header />

    <section class="content-section">
      <div class="content-inner content-inner--back">
        <a href="/archive2025" class="btn">‚Üê Back to CiQ 2025 Archive</a>
      </div>
    </section>

    <section class="content-section2">
      <div class="content-inner">
        <SponsorGrid title="CiQ 2025 Partners" ariaLabel="CiQ 2025 partners" items={partnersItems} />
        <SponsorGrid title="CiQ 2025 Sponsors" ariaLabel="CiQ 2025 sponsors" items={sponsorsItems} />
      </div>
    </section>

    <section class="content-section3">
      <div class="content-inner">
        <SponsorGrid title="CiQ 2025 Exhibitors" ariaLabel="CiQ 2025 exhibitors" items={attendingItems} />
      </div>
    </section>

    <section class="content-section4">
      <div class="content-inner">
        <h2>Affiliations</h2>

        <div class="sponsor-grid" aria-label="Affiliations">
          <div class="sponsor-item">
            <a href="https://www.bristol.ac.uk/quantum-engineering/"><Image
              src={QECDT}
              alt="Centre for Doctoral Training in Quantum Engineering logo"
              class="sponsor-logo"
            /></a>
          </div>

          <div class="sponsor-item">
            <a href="https://www.bristol.ac.uk"><Image src={UoB} alt="University of Bristol logo" class="sponsor-logo" /></a>
          </div>
        </div>
      </div>
    </section>

    <Footer />

    <style>
      .content-section {
        background-color: hsl(192, 100%, 15%);
        padding: 1rem 1.5rem;
      }

      .content-section2 {
        background-color: #a0bec6ff;
        padding: 2rem 1.5rem;
      }

      .content-section3 {
        background-color: #00bcae;
        padding: 2rem 1.5rem;
      }

      .content-section4 {
        background-color: #000000ff;
        padding: 4rem 1.5rem;
      }

      .content-inner {
        max-width: 900px;
        margin: 0 auto;
      }

      .content-inner--back {
        margin: 0;
        max-width: 900px;
      }
      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0rem 2rem;
        border-radius: 999px;
        background: rgb(var(--white));
        color: hsl(192, 100%, 15%);
        text-decoration: none;
        font-weight: 600;
        font-size: 1.35rem;
        line-height: 4;
        border: 1px solid rgba(255, 255, 255, 0.25);
        white-space: nowrap;
        vertical-align: middle;
      }

      .btn:hover {
        filter: brightness(0.95);
      }
    </style>
  </body>
</html>
