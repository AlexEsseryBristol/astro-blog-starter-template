---
import SiteLayout from "../layouts/SiteLayout.astro";
import Section from "../components/ui/Section.astro";
import { SITE_LINKS } from '../lib/config.ts';
const TICKET_URL = SITE_LINKS.ticketUrl;
---

<SiteLayout title="Contact" description="Contact page for Careers in Quantum.">
  <Section background="hsl(192, 100%, 15%)" padding="2rem 1.5rem" maxWidth="900px">
    <center>
    <h1>Registration</h1>
    <p>
      Careers in Quantum is a free event, but registration is required.
      <br/>
      A certain amount of funding will be available to reimburse travel expenses, which will be allocated according to need and availability. 
      <a href={"https://forms.office.com/Pages/ResponsePage.aspx?id=MH_ksn3NTkql2rGM8aQVG-IP9yzadpRIujFRObcehmFUM0dGSjdPNlVLMDFGS0JOSFdLUUY1RVlNRy4u"} target="_blank">Apply for a travel bursary</a>.
      <br/>
  </p>
    <h5>Book your place now via Eventbrite:</h5>
    <a href={TICKET_URL} target="_blank" class="btn">Registration</a>
    </center>
  </Section>
</SiteLayout>
